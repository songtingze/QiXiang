<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.app.dao.IRecordDao">
    <select id="queryByRid" parameterType="String" resultType="Record">
        select * from record where rid = #{rid}
    </select>
    <insert id="addRecord" parameterType="Record" useGeneratedKeys="true" keyProperty="id">
        insert into record (id,rid,content,create_time,update_time,state,uid,picture) values (#{id},#{rid},#{content},#{createTime},#{updateTime},#{state},#{uid},#{picture})
    </insert>

    <update id="updateRecord" parameterType="Record">
        update record set id = #{id},rid = #{rid},content = #{content},create_time = #{createTime},update_time = #{updateTime},state = #{state},uid = #{uid},picture = #{picture} where rid = #{rid}
    </update>

    <delete id="deleteRecord">
        delete from record where rid = #{rid}
    </delete>
</mapper>