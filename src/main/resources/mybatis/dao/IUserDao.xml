<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.app.dao.IUserDao">
    <select id="queryByUid" parameterType="String" resultType="User">
        select * from user where uid = #{uid}
    </select>
    <select id="queryByPhone" parameterType="String" resultType="User">
        select * from user where phone = #{phone}
    </select>
    <insert id="addUser" parameterType="User" useGeneratedKeys="true" keyProperty="id">
        insert into user(id,uid,user_name,password,phone,pid,sex,birthday,create_time,update_time,address,state) values (#{id},#{uid},#{userName},#{password},#{phone},#{pid},#{sex},#{birthday},#{createTime},#{updateTime},#{address},#{state})
    </insert>
    <update id="updateUser" parameterType="User">
        update user set id = #{id},uid = #{uid},user_name = #{userName},password = #{password},phone = #{phone},pid = #{pid},sex = #{sex},birthday = #{birthday},create_time = #{createTime},update_time = #{updateTime},address=#{address} , state=#{state} where uid = #{uid}
    </update>
</mapper>