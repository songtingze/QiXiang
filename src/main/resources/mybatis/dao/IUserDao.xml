<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.app.dao.IUserDao">
    <select id="queryByUid" parameterType="String" resultType="User">
        select * from user where uid = #{uid}
    </select>
    <select id="queryByPhone" parameterType="String" resultType="User">
        select * from user where phone = #{phone}
    </select>
    <insert id="addUser" parameterType="User" useGeneratedKeys="true" keyProperty="id">
        insert into user(id,uid,userName,password,phone,hid,sex,birthday,createTime,updateTime,address,state) values (#{id},#{uid},#{userName},#{password},#{phone},#{hid},#{sex},#{birthday},#{createTime},#{updateTime},#{address},#{state})
    </insert>
    <update id="updateUser" parameterType="User">
        update user set id = #{id},uid = #{uid},userName = #{userName},password = #{password},phone = #{phone},hid = #{hid},sex = #{sex},birthday = #{birthday},createTime = #{createTime},updateTime = #{updateTime},address=#{address} , state=#{state} where uid = #{uid}
    </update>
</mapper>